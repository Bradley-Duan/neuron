{
  "name": "@nervosnetwork/neuron-wallet",
  "productName": "Neuron",
  "description": "CKB Neuron Wallet",
  "homepage": "https://www.nervos.org/",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Nervos Core Dev",
    "email": "dev@nervos.org",
    "url": "https://github.com/nervosnetwork/neuron"
  },
  "main": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env electron .",
    "start:dev": "tsc && cross-env electron .",
    "build": "tsc",
    "clean": "rm -rf dist/*",
    "test": "jest --color",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "package": "./script/package.sh",
    "postinstall": "npm rebuild tiny-secp256k1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(ts?|js?)$",
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.ts"
  },
  "dependencies": {
    "@nervosnetwork/ckb-sdk-core": "^0.0.1-alpha.1",
    "electron-window-state": "^5.0.3",
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@nervosnetwork/ckb-types": "^0.0.1-alpha.1",
    "@nervosnetwork/neuron-ui": "^0.1.0",
    "@types/electron": "^1.6.10",
    "@types/electron-devtools-installer": "^2.2.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "spectron": "^5.0.0",
    "tslint": "^5.12.1"
  }
}
